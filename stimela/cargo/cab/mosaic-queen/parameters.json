"task": "mosaic-queen", 
"base": "stimela/montage", 
"tag": "1.7.5",
"version" : "1.1.1",
"description": "A package that allows continuum (2D) images and spectral (3D) images to be mosaicked together, using montage commands.", 
"prefix": "--", 
"binary": "mosiac-queen", 
"junk": [],
"msdir": false, 
"parameters": [
        {
            "name": "input",
            "info": "The directory that contains the (2D or 3D) images and beams.",
            "required": true,
            "default": null,
            "dtype": "str"
        },
        {
            "name": "target-images",
            "info": "The filenames of each target/pointing image to be mosaicked. A suffix of 'image.fits' is expected, and this is replaced by 'pb.fits' in order to locate the corresponding beams (which are also required as input).",
            "required": true,
            "default": null,
            "dtype": "list:file",
            "io": "input"
        },
        {
            "name": "output",
            "info": "The directory for all output files.",
            "required": true,
            "default": null,
            "dtype": "str"
        },
        {
            "name": "name",
            "info": "The prefix to be used for output files.",
            "required": true,
            "default": null,
            "dtype": "str"
        },
        {
            "name": "num-workers",
            "info": "Number of worker threads. Default=0 means all available threads.",
            "required": false,
            "default": 0,
            "dtype": "int"
        },
        {
            "name": "associated-mosaics",
            "info": "Also make mosaics of the associated 'model' and 'residual' .fits files.",
            "required": false,
            "default": null,
            "dtype": "bool"
        },
        {
            "name": "regrid",
            "info": "Use montage for regridding the images and beams. Also regrid the 'model' and 'residual' files, if '--associated-mosaics' is enabled.",
            "required": false,
            "default": null,
            "dtype": "bool"
        },
        {
            "name": "force-regrid",
            "info": "If the user wants newly-regridded files, this '--force-regrid' argument should be enabled. (If '--regrid' is enabled instead, the package will first check whether regridded files already exist. If they are found, regridding will not proceed because this is a time-consuming step.)",
            "required": false,
            "default": null,
            "dtype": "bool"
        },
        {
            "name": "beam-cutoff",
            "info": "The cutoff in the primary beam to use.",
            "required": false,
            "default": 0.1,
            "dtype": "float"
        },
        {
            "name": "mosaic-cutoff",
            "info": "Sensitivity cutoff in the final mosaic. Pixels with a noise level > minimum mosaic noise / cutoff are blanked in all final products. E.g. The default of 0.2 means blanking in the mosaic all pixels with a noise level > 5x the minimum mosaic noise level.",
            "required": false,
            "default": 0.2,
            "dtype": "float"
        },
        {
            "name": "unity-weights",
            "info": "Build the mosaic using weight=1 instead of weight=1/noise**2 for the input images.",
            "required": false,
            "default": null,
            "dtype": "bool"
        },
        {
            "name": "statistic",
            "info": "State 'mad' (median absolute deviation), 'rms' (root mean square) or 'fit' (Gaussian fit) as the statistic to be used for estimating the noise level in the input images. This will be derived using the negative pixel-values. The noise levels set the weights=1/noise**2 used when mosaicking. Not used if the '-u' option is enabled. Default is mad.",
            "required": false,
            "default": "mad",
            "dtype": "str",
            "choices": [
                "mad",
                "rms",
                "fit"]
        },
        {
            "name": "guess-std",
            "info": "An initial guess of the noise level in the input images, if user has set '--statistic' to 'fit'. (This is to aid a Gaussian fit to the negative pixel-values.) The default of 0.02 assumes that the pixel values are in units of Jy/beam, so a std of ~ 20 mJy/beam).",
            "required": false,
            "default": 0.02,
            "dtype": "float"
        },
        {
            "name": "ra",
            "info": "Central RA (in degrees) of the output mosaic image/cube, if the user does not want to image the entire FoV covered by the input images/cubes.",
            "required": false,
            "default": null,
            "dtype": "float"
        },
        {
            "name": "dec",
            "info": "Central Dec (in degrees) of the output mosaic image/cube, if the user does not want to image the entire FoV covered by the input images/cubes.",
            "required": false,
            "default": null,
            "dtype": "float"
        },
        {
            "name": "velocity",
            "info": "Central velocity/frequency of the output mosaic cube (in the appropriate units of the input cubes) if the user does not want to image the entire velocity/frequency range covered by the input cubes.",
            "required": false,
            "default": null,
            "dtype": "float"
        },
        {
            "name": "dra",
            "info": "RA range of the output mosaic image/cube (in degrees), if the user does not want to image the entire FoV covered by the input images/cubes.",
            "required": false,
            "default": null,
            "dtype": "float"
        },
        {
            "name": "ddec",
            "info": "Dec range of the output mosaic image/cube (in degrees), if the user does not want to image the entire FoV covered by the input images/cubes.",
            "required": false,
            "default": null,
            "dtype": "float"
        },
        {
            "name": "dv",
            "info": "Velocity/frequency range of the output mosaic cube (in the unit used by the input images), if the user does not want to image the entire velocity/frequency range covered by the input cubes.",
            "required": false,
            "default": null,
            "dtype": "float"
        },
    ]
